<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".Drafts.mvpA.MVPActivity">

    <sematech.training.custom_views.MyEditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:hint="Enter your name to get age"
        android:layout_height="wrap_content" />

    <sematech.training.custom_views.MyButton
        android:id="@+id/getAge"
        android:text="Get age by name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <sematech.training.custom_views.MyTextView
        android:textSize="25sp"
        android:id="@+id/results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>